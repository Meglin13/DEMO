<Window x:Class="DemoTrannig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoTrannig"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="800" MinWidth="1200" ResizeMode="CanResize" FontFamily="Comic Sans MS" FontSize="14">
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"  Background="#FF498C51"/>
        <Image Source="/Resources/icon.ico" Grid.Row="0"
               VerticalAlignment="Center" HorizontalAlignment="Left" />
        <Label Content="Посуда" Grid.Row="0" FontSize="40"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <!--<TextBlock Grid.Row="0" FontSize="20"
               VerticalAlignment="Center" HorizontalAlignment="Right" Name="UsersNameLabel" 
               Text="{Binding AuthUser.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
